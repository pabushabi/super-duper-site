doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        title #{current}
        include links
    body
        include header
        h1#h-prof Profile
        .prof-inf
            img(src="/assets/account.svg")
            p#hello Привет, #{current}
            p#yourma Ваша почта: #{data.login}
            p#yourpa Ваш пароль: #{data.password}

        .form-res
            form.resume-form(action='' method='post' name="Resume")
                label
                    span Имя:
                    input(type='text' name="Name" maxlength=19 required=true placeholder="Иван")
                br
                label
                    span Фамилия:
                    input(type='text' name="SecondName" maxlength=10 required=true placeholder="Иванов")
                br
                label
                    span Дата рождения:
                    input.inp-num(type='date' name="Birthdate" required=true)
                br
                label
                    span#bug Высшее образование
                    input.radio(type='checkbox' name="Education")
                br
                label
                    span Стаж работы:
                    input.inp-num(type='number' min="0" max="50" value="0" name="Experience" required=true)
                br
                label
                    span Специализация:
                    select#select-spec(name='Specialization', style='width: 150px; height: 33px' required=true)
                        option(value='') Programmer
                        option(value='') Ingineer
                        option(value='') Photographer
                        option(value='') Artist
                        option(value='') Scientist
                br
                label
                    span Телефон:
                    input(type="tel" name="Phone" pattern="\\+[0-9]{1,3}\\([0-9]{3,4}\\)[0-9]{3}-[0-9]{4}" maxlength=19
                    placeholder="+1(999)999-9999")
                br
                label
                    span Предпочитаемый режим работы:
                    select#time-mode(name='Time-mode', style='width: 200px; height: 33px' required=true)
                        option(value='') Полный день
                        option(value='') Частичная занятость
                        option(value='') Плавающий график
                        option(value='') Удалённая работа
                br
                label
                    span Желаемая зароботная плата:
                    input.inp-num(type='number' min="0" max="9000000" value="0" step="1000" name="Pay-b" required=true)
                    span -
                    input.inp-num(type='number' min="0" max="9000000" value="0" step="1000" name="Pay-t" required=true)
                br
                label
                    span О себе:
                    textarea(name="About")
                br
                button#submit(type="button" onclick="resume_submit()") Сохранить


        script(src='/assets/script.js')
